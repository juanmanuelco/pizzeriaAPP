<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.opcion.juan.pizzeria.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="223dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="26sp"
                android:layout_marginTop="12dp"
                android:text="Inicio de sesión" />

            <EditText
                android:id="@+id/txtCorreoLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#000"
                android:textColorHint="#665D5D"
                android:layout_marginTop="28sp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:layout_weight="2.51" />

            <EditText
                android:id="@+id/txtPasswordLogin"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColorHint="#665D5D"
                android:hint="Contraseña"
                android:background="#fff"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="28sp"
                android:inputType="textPassword"
                android:layout_weight="2.51"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEntrarLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:onClick="IniciarSesion"
                    android:background="?android:attr/colorMultiSelectHighlight"
                    android:text="Ingresar" />

                <Button
                    android:id="@+id/btnRegistrarLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28sp"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:onClick="Registrarse"
                    android:background="?android:attr/colorFocusedHighlight"
                    android:text="Registrar" />

                <Button
                    android:id="@+id/btnOlvidoLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28sp"
                    android:textColor="#fff"
                    android:onClick="abrirRecuperar"
                    android:layout_weight="1"
                    android:background="?android:attr/colorFocusedHighlight"
                    android:text="Recuperar" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
