<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.opcion.juan.pizzeria.activityPizzas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:text="Productos"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtBuscarPizzas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10px"
                android:layout_weight="1"
                android:background="#fff"
                android:ems="10"
                android:hint="Buscar..."
                android:inputType="textPersonName"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:textColor="#000"
                android:textColorHint="#665D5D" />

            <ImageButton
                android:id="@+id/btnBuscarPizzas"
                android:layout_width="54dp"
                android:layout_height="48dp"
                android:onClick="buscarPizzas"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/buscar" />

            <ImageButton
                android:id="@+id/btnCarritoPizzas"
                android:layout_width="54dp"
                android:layout_height="48dp"
                android:onClick="abrirCarrito"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/carrito" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/PizzaClasicaMediana"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgPizzaClasicaMediana"
                            android:layout_width="103dp"
                            android:layout_height="95dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/pizzaclasicamediana" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tPiClaMed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="4dp"
                                android:text="Pizza clásica mediana"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/precioPizzaMediana"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4px"
                                android:text="$9.00"
                                android:textAlignment="center"
                                android:textColor="#fff"
                            android:textSize="14sp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="17px"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <EditText
                                    android:id="@+id/txtPCM"
                                    android:layout_width="156dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12px"
                                    android:background="#fff"
                                    android:text="0"
                                    android:inputType="numberSigned"
                                    android:paddingBottom="7dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:paddingTop="6dp"
                                    android:textColor="#000"
                                    android:textColorHint="#665D5D"
                                    android:layout_weight="0.97" />

                                <Button
                                    android:id="@+id/btnAddPizzaClasicaMediana"
                                    android:layout_width="40dp"
                                    android:onClick="addPCM"
                                    android:layout_height="wrap_content"
                                    android:text="+" />
                                <Button
                                    android:id="@+id/btnLessPizzaClasicaMediana"
                                    android:layout_width="40dp"
                                    android:onClick="lessPCM"
                                    android:layout_height="wrap_content"
                                    android:text="-" />
                                <Button
                                    android:id="@+id/btnOkPizzaClasicaMediana"
                                    android:layout_width="50dp"
                                    android:onClick="addCarrPCM"
                                    android:layout_height="wrap_content"
                                    android:text="OK" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/PizzaClasicaGrande"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgPizzaClasicaGrande"
                            android:layout_width="103dp"
                            android:layout_height="95dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/pizzaclasicagrande" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tPiClaG"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="4dp"
                                android:text="Pizza clásica grande"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/precioPizzaGrande"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4px"
                                android:text="$17.00"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="14sp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="17px"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <EditText
                                    android:id="@+id/txtPCG"
                                    android:layout_width="156dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12px"
                                    android:background="#fff"
                                    android:text="0"

                                    android:inputType="numberSigned"
                                    android:paddingBottom="7dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:paddingTop="6dp"
                                    android:textColor="#000"
                                    android:textColorHint="#665D5D"
                                    android:layout_weight="0.97" />

                                <Button
                                    android:id="@+id/btnAddPizzaClasicaGrande"
                                    android:layout_width="40dp"
                                    android:onClick="addPCG"
                                    android:layout_height="wrap_content"
                                    android:text="+" />

                                <Button
                                    android:id="@+id/btnLessPizzaClasicaGrande"
                                    android:layout_width="40dp"
                                    android:onClick="lessPCG"
                                    android:layout_height="wrap_content"
                                    android:text="-" />
                                <Button
                                    android:id="@+id/btnOkPizzaClasicaGrande"
                                    android:layout_width="50dp"
                                    android:onClick="addCarrPCG"
                                    android:layout_height="wrap_content"
                                    android:text="OK" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/pizzaHawayanaGrande"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgPizzaHawayanaGrande"
                            android:layout_width="103dp"
                            android:layout_height="95dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/pizzashawayanagrande" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tPiHaG"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="4dp"
                                android:text="Pizza hawaiana grande"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/precioPizzaHawayana"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4px"
                                android:text="$22.00"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="14sp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="17px"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <EditText
                                    android:id="@+id/txtPHG"
                                    android:layout_width="156dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12px"
                                    android:background="#fff"
                                    android:text="0"

                                    android:inputType="numberSigned"
                                    android:paddingBottom="7dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:paddingTop="6dp"
                                    android:textColor="#000"
                                    android:textColorHint="#665D5D"
                                    android:layout_weight="0.97" />

                                <Button
                                    android:id="@+id/btnAddPizzaHawayanaGrande"
                                    android:layout_width="40dp"
                                    android:onClick="addPHG"
                                    android:layout_height="wrap_content"
                                    android:text="+" />
                                <Button
                                    android:id="@+id/btnLessPizzaHawayanaGrande"
                                    android:layout_width="40dp"
                                    android:onClick="lessPHG"
                                    android:layout_height="wrap_content"
                                    android:text="-" />
                                <Button
                                    android:id="@+id/btnOkPizzaHawaianaGrande"
                                    android:layout_width="50dp"
                                    android:onClick="addCarrPHG"
                                    android:layout_height="wrap_content"
                                    android:text="OK" />


                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
