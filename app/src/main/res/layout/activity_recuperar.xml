<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.opcion.juan.pizzeria.recuperarActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="223dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="26sp"
        android:layout_marginTop="12dp"
        android:text="recuperar contraseÃ±a" />

    <EditText
        android:id="@+id/txtCorreoRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="#000"
        android:textColorHint="#665D5D"
        android:layout_marginTop="28sp"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_weight="2.51" />

        <Button
            android:id="@+id/btnOlvidoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:layout_marginTop="12px"
            android:layout_marginLeft="28px"
            android:layout_marginRight="28px"
            android:onClick="RecuperarCuenta"
            android:background="?android:attr/colorFocusedHighlight"
            android:text="Recuperar"
            android:textColor="#fff" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
